@page "/CreateQuestion"
@model CreateQuestionModel
@{
    ViewData["Title"] = "Đặt Câu Hỏi";
}

<!DOCTYPE html>
<html>
<head>
    <title>Tạo Câu Hỏi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #555;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            padding: 10px 20px;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-right: 10px;
        }

            button:hover {
                background-color: #0056b3;
            }

        .readonly-input {
            background-color: #f9f9f9;
            cursor: not-allowed;
        }

        .button-group {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Đặt Câu Hỏi</h1>
        <form id="question-form">
            <div>
                <label for="username">Tên người dùng:</label>
                <input type="text" id="username" name="username" class="readonly-input" readonly />
            </div>
            <div>
                <label for="title">Tiêu đề:</label>
                <input type="text" id="title" name="title" required />
            </div>
            <div>
                <label for="body">Nội dung:</label>
                <textarea id="body" name="body" rows="4" required></textarea>
            </div>
            <div class="button-group">
                <button type="submit">Gửi Câu Hỏi</button>
                <button type="button" id="back-button">Quay lại</button>
            </div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const username = localStorage.getItem('username');
            if (username) {
                document.getElementById('username').value = username;
            } else {
                alert('Không tìm thấy tên người dùng. Vui lòng đăng nhập.');
                window.location.href = '/Login'; 
            }
        });

        document.getElementById('question-form').addEventListener('submit', function (event) {
            event.preventDefault();
            const username = document.getElementById('username').value;
            const title = document.getElementById('title').value;
            const body = document.getElementById('body').value;

            if (!username || !title || !body) {
                alert('Không được để trống bất cứ ô nào');
                return;
            }

            // Confirm before submitting
            const confirmSubmit = confirm('Bạn có chắc chắn muốn gửi câu hỏi không?');
            if (!confirmSubmit) {
                return; 
            }

            fetch('http://localhost:5100/api/Question', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    username: username,
                    title: title,
                    body: body
                })
            })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(error => {
                            throw new Error(error.message || 'Phản hồi mạng không hợp lệ');
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    alert('Câu hỏi đã được gửi thành công!');
                    window.location.href = '/HomePage';
                    document.getElementById('question-form').reset(); 
                })
                .catch(error => {
                    alert('Lỗi: ' + error.message);
                });
        });

        document.getElementById('back-button').addEventListener('click', function () {
            window.location.href = '/HomePage';
        });
    </script>
</body>
</html>
